{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "rules": {
    "indent": [2, "tab"],
    "no-tabs": 0,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "no-console": 0,
    "comma-dangle": [2, "never"],
    "semi": ["error", "never"],
    "no-confusing-arrow": 0,
    "no-cond-assign": 0,
    "no-shadow": 0,
    "react/jsx-filename-extension": 0,
    "react/prop-types": 0,
    "no-param-reassign": 0,
    "no-return-assign": 0
  },
  "globals": {
    "atom": true,
    "describe": true,
    "it": true,
    "context": true,
    "document": true
  }
}
